<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_fullname"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <Switch
            android:text="@string/private_repository"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:id="@+id/switch_detail_private" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_fullname"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_language" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_last_updated"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"/>
    <TextView
            android:text="@string/created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_created" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_detail_private"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"/>
    <TextView
            android:text="@string/last_updated_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_last_updated" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_created" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"/>
</androidx.constraintlayout.widget.ConstraintLayout>